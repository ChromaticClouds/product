<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 상품 관리 대시보드</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mvcproduct.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <nav class="side-bar">
        <div class="nav-container">
            <div class = "nav-home">
                <i class='bx bxl-xing icon' ></i>
                <div class="home">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVC DashBoard</a>
                </div>
            </div>
            <div class="nav-box">
                <ul class="menu-links">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <li class="nav-links">
                            <div class="sort">
                                <div class="icon-box">
                                    <i class="fa-solid fa-house icon"></i>
                                </div>
                                <span class = "text nav-text">Dashboard</span>
                            </div>
                        </li>
                    </a>
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Register">
                        <li class="nav-links">
                            <div class="sort">
                                <div class="icon-box">
                                    <i class="fa-solid fa-boxes-packing icon"></i>
                                </div>
                                <span class = "text nav-text">Product Register</span>
                            </div>
                        </li>
                    </a>
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Products">
                        <li class="nav-links">
                            <div class="sort">
                                <div class="icon-box">
                                    <i class="fa-solid fa-boxes-stacked icon"></i>
                                </div>
                                <span class = "text nav-text">Product Manage</span>
                            </div>
                        </li>
                    </a>
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                        <li class="nav-links">
                            <div class="sort">
                                <div class="icon-box">
                                    <i class="fa-solid fa-user icon"></i>
                                </div>
                                <span class = "text nav-text">Seller Info</span>
                            </div>
                        </li>
                    </a>
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="IOBinfo">
                        <li class="nav-links">
                            <div class="sort">
                                <div class="icon-box">
                                    <i class="fa-solid fa-box-open icon"></i>
                                </div>
                                <span class = "text nav-text">IB/OB Info</span>
                            </div>
                        </li>
                    </a>
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Order">
                        <li class="nav-links">
                            <div class="sort">
                                <div class="icon-box">
                                    <i class="fa-solid fa-cart-shopping icon"></i>
                                </div>
                                <span class = "text nav-text">Order</span>
                            </div>
                        </li>
                    </a>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
